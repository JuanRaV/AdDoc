extends ../layout/index
block contenido
    .py-10 
        h1.text-4xl.my-10.text-center.font-extrabold Ad
            span.text-blue-600 Doc
        h2.text-center.text-2xl.font-extrabold= pagina
        if errors
            div(class="max-w-md mx-auto my-10")
                each error in errors
                    p(class="bg-red-600 text-white uppercase text-xs text-center p-2 mb-1 font-bold rounded-lg")= error.msg
        .mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow
                form( method="POST" class="space-y-5")
                    input(type="hidden" name="_csrf" value= csrfToken)
                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="email") Your New password
                        input#password.w-full.px-3.py-2.border.border-blue-700.rounded-md.placeholder-gay-300(placeholder="Write your new password" type="password" name="password")
                    input(type="submit" value="Save Password" class="w-full bg-blue-600 hover:bg-blue-700 py-3 text-white font-bold rounded-lg cursor-pointer ")